<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".NotificationEditFragment">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="タップして放送時間を指定"
                android:gravity="center"
                style="@android:style/Widget.Material.Button.Borderless"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:ems="10"
                android:id="@+id/editText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"/>
        <com.google.android.material.chip.ChipGroup
                android:id="@+id/day_of_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:singleSelection="true"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/editText"
                android:layout_marginTop="16dp">
            <com.google.android.material.chip.Chip
                    android:id="@+id/mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="月"
                    android:tag="2"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/tue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="火"
                    android:tag="3"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/wed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水"
                    android:tag="4"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/thu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="木"
                    android:tag="5"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/fri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金"
                    android:tag="6"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/sat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="土"
                    android:tag="7"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/sun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日"
                    android:tag="1"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
        </com.google.android.material.chip.ChipGroup>
        <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/chipGroupMinute"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/day_of_week"
                android:layout_marginTop="8dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
            <com.google.android.material.chip.Chip
                    android:id="@+id/minute_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5分"
                    android:tag="300"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/minute_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10分"
                    android:tag="600"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/minute_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30分"
                    android:tag="1800"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
        </com.google.android.material.chip.ChipGroup>
        <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/chipGroupMinute"
                android:id="@+id/chipGroupHour" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp">
            <com.google.android.material.chip.Chip
                    android:id="@+id/hour_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1時間"
                    android:tag="3600"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/hour_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2時間"
                    android:tag="7200"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/hour_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3時間"
                    android:tag="10800"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/hour_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4時間"
                    android:tag="14400"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/hour_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5時間"
                    android:tag="18000"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
        </com.google.android.material.chip.ChipGroup>
        <Button
                android:text="通知を作成する"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/create"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cancel"
                app:layout_constraintTop_toBottomOf="@+id/chipGroupHour" android:layout_marginTop="16dp"/>
        <Button
                android:text="やめる"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel"
                app:layout_constraintStart_toEndOf="@+id/create" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/chipGroupHour"
                android:layout_marginTop="16dp"/>
        <Button
                android:text="通知を削除する"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>