<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".NotificationEditFragment">
        <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/chipGroupMinute" app:layout_constraintTop_toTopOf="parent"
        >
            <com.google.android.material.chip.Chip
                    android:id="@+id/minute_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5分"
                    android:tag="300"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/minute_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10分"
                    android:tag="600"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/minute_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30分"
                    android:tag="1800"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
        </com.google.android.material.chip.ChipGroup>
        <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="-27dp" app:layout_constraintTop_toBottomOf="@+id/chipGroupMinute"
                android:id="@+id/chipGroupHour">
            <com.google.android.material.chip.Chip
                    android:id="@+id/hour_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1時間"
                    android:tag="3600"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/hour_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2時間"
                    android:tag="7200"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/hour_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3時間"
                    android:tag="10800"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/hour_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4時間"
                    android:tag="14400"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/hour_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5時間"
                    android:tag="18000"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
        </com.google.android.material.chip.ChipGroup>
        <Button
                android:text="通知を作成する"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/create"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cancel"
                app:layout_constraintTop_toBottomOf="@+id/chipGroupHour"/>
        <Button
                android:text="やめる"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel"
                app:layout_constraintStart_toEndOf="@+id/create" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/chipGroupHour"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:hint="放送時間を指定"
                android:ems="10"
                android:id="@+id/editText" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/create" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/chipGroupSecound"
                app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toBottomOf="@+id/editText">
            <com.google.android.material.chip.Chip
                    android:id="@+id/second_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3秒"
                    android:tag="3"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/second_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5秒"
                    android:tag="5"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/second_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7秒"
                    android:tag="7"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
        </com.google.android.material.chip.ChipGroup>
        <Button
                android:text="今から「?秒後」に通知"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/create_debug"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/chipGroupSecound"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>