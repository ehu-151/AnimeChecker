<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".NotificationEditFragment">
        <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/chipGroup">
            <com.google.android.material.chip.Chip
                    android:id="@+id/minute_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5分"
                    android:tag="5"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/minute_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10分"
                    android:tag="10"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/minute_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30分"
                    android:tag="30"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
        </com.google.android.material.chip.ChipGroup>
        <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="-27dp" app:layout_constraintTop_toBottomOf="@+id/chipGroup"
                android:id="@+id/chipGroup2">
            <com.google.android.material.chip.Chip
                    android:id="@+id/hour_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1時間"
                    android:tag="60"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/hour_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2時間"
                    android:tag="120"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/hour_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3時間"
                    android:tag="180"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/hour_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4時間"
                    android:tag="240"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/hour_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5時間"
                    android:tag="300"
                    style="@style/Widget.MaterialComponents.Chip.Filter"/>
        </com.google.android.material.chip.ChipGroup>
        <Button
                android:text="通知を作成する"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/create"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cancel"
                app:layout_constraintTop_toBottomOf="@+id/chipGroup2"/>
        <Button
                android:text="やめる"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel"
                app:layout_constraintStart_toEndOf="@+id/create" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/chipGroup2"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/editText" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/create" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>