<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="model" type="com.example.ehu.animeckecker.room.NotificationAlarmEntity"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="tes"
                android:layout_width="10dp"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:layout_height="wrap_content" android:id="@+id/notification_id"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="tes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/anime_id" app:layout_constraintStart_toEndOf="@+id/notification_id"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <TextView
                android:text="@{model.beforeTimeText}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/before_second" app:layout_constraintStart_toEndOf="@+id/anime_id"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="@{model.beforeTimeText}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/before_time_text" app:layout_constraintStart_toEndOf="@+id/before_second"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>